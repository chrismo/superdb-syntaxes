{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "SuperSQL",
  "scopeName": "source.spq",
  "fileTypes": ["spq"],
  "foldingStartMarker": "\\(\\s*$",
  "foldingStopMarker": "^\\s*\\)",
  "patterns": [
    { "include": "#comments" },
    { "include": "#regex" },
    { "include": "#fstrings" },
    { "include": "#raw-strings" },
    { "include": "#strings" },
    { "include": "#backtick-identifiers" },
    { "include": "#constants" },
    { "include": "#keywords" },
    { "include": "#operators-builtin" },
    { "include": "#functions-aggregate" },
    { "include": "#sql-keywords" },
    { "include": "#types" },
    { "include": "#durations" },
    { "include": "#operators" },
    { "include": "#numbers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-dash.spq",
          "match": "--.*$"
        },
        {
          "name": "comment.block.spq",
          "begin": "/\\*",
          "end": "\\*/",
          "captures": {
            "0": { "name": "punctuation.definition.comment.spq" }
          }
        }
      ]
    },
    "regex": {
      "name": "string.regexp.spq",
      "begin": "(?<![\\w)])/(?![/*])",
      "end": "/",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.string.begin.spq" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.definition.string.end.spq" }
      },
      "patterns": [
        {
          "name": "constant.character.escape.spq",
          "match": "\\\\."
        }
      ]
    },
    "fstrings": {
      "patterns": [
        {
          "name": "string.interpolated.double.spq",
          "begin": "f\"",
          "end": "\"",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.spq" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.spq" }
          },
          "patterns": [
            {
              "name": "meta.interpolation.spq",
              "begin": "\\{",
              "end": "\\}",
              "beginCaptures": {
                "0": { "name": "punctuation.section.interpolation.begin.spq" }
              },
              "endCaptures": {
                "0": { "name": "punctuation.section.interpolation.end.spq" }
              },
              "patterns": [
                { "include": "$self" }
              ]
            },
            { "include": "#string-escapes" }
          ]
        },
        {
          "name": "string.interpolated.single.spq",
          "begin": "f'",
          "end": "'",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.spq" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.spq" }
          },
          "patterns": [
            {
              "name": "meta.interpolation.spq",
              "begin": "\\{",
              "end": "\\}",
              "beginCaptures": {
                "0": { "name": "punctuation.section.interpolation.begin.spq" }
              },
              "endCaptures": {
                "0": { "name": "punctuation.section.interpolation.end.spq" }
              },
              "patterns": [
                { "include": "$self" }
              ]
            },
            { "include": "#string-escapes" }
          ]
        }
      ]
    },
    "raw-strings": {
      "patterns": [
        {
          "name": "string.quoted.double.raw.spq",
          "begin": "r\"",
          "end": "\"",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.spq" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.spq" }
          }
        },
        {
          "name": "string.quoted.single.raw.spq",
          "begin": "r'",
          "end": "'",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.spq" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.spq" }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.spq",
          "begin": "\"",
          "end": "\"",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.spq" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.spq" }
          },
          "patterns": [
            { "include": "#string-escapes" }
          ]
        },
        {
          "name": "string.quoted.single.spq",
          "begin": "'",
          "end": "'",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.spq" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.spq" }
          },
          "patterns": [
            { "include": "#string-escapes" }
          ]
        }
      ]
    },
    "backtick-identifiers": {
      "name": "variable.other.quoted.spq",
      "begin": "`",
      "end": "`",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.variable.begin.spq" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.definition.variable.end.spq" }
      }
    },
    "string-escapes": {
      "patterns": [
        {
          "name": "constant.character.escape.spq",
          "match": "\\\\(?:[\\\\\"'nrtbfv]|x[0-9a-fA-F]{2}|u[0-9a-fA-F]{4}|u\\{[0-9a-fA-F]+\\})"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.true.spq",
          "match": "(?i)\\b(true)\\b"
        },
        {
          "name": "constant.language.boolean.false.spq",
          "match": "(?i)\\b(false)\\b"
        },
        {
          "name": "constant.language.null.spq",
          "match": "(?i)\\b(null)\\b"
        },
        {
          "name": "constant.language.nan.spq",
          "match": "\\b(NaN)\\b"
        },
        {
          "name": "constant.language.infinity.spq",
          "match": "[+-]?\\b(Inf)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.spq",
          "match": "(?i)\\b(const|fn|op|type|let|pragma)\\b"
        },
        {
          "name": "keyword.other.spq",
          "match": "(?i)\\b(this|lambda|error|enum)\\b"
        }
      ]
    },
    "sql-keywords": {
      "comment": "SQL keywords - case insensitive",
      "patterns": [
        {
          "name": "keyword.other.sql.spq",
          "match": "(?i)\\b(SELECT|FROM|WHERE|GROUP|BY|HAVING|ORDER|LIMIT|OFFSET)\\b"
        },
        {
          "name": "keyword.other.sql.join.spq",
          "match": "(?i)\\b(JOIN|INNER|LEFT|RIGHT|CROSS|ANTI|FULL|OUTER|ON|USING)\\b"
        },
        {
          "name": "keyword.other.sql.set.spq",
          "match": "(?i)\\b(UNION|INTERSECT|EXCEPT|ALL|DISTINCT)\\b"
        },
        {
          "name": "keyword.other.sql.clause.spq",
          "match": "(?i)\\b(WITH|RECURSIVE|MATERIALIZED|AS|VALUES|INTO|AT|ORDINALITY)\\b"
        },
        {
          "name": "keyword.other.sql.case.spq",
          "match": "(?i)\\b(CASE|WHEN|THEN|ELSE|END|IF|DEFAULT)\\b"
        },
        {
          "name": "keyword.operator.logical.sql.spq",
          "match": "(?i)\\b(AND|OR|NOT|IN|EXISTS|LIKE|BETWEEN|IS)\\b"
        },
        {
          "name": "keyword.other.sql.order.spq",
          "match": "(?i)\\b(ASC|DESC|NULLS|FIRST|LAST)\\b"
        },
        {
          "name": "keyword.other.sql.window.spq",
          "match": "(?i)\\b(OVER|PARTITION|ROWS|RANGE|UNBOUNDED|PRECEDING|FOLLOWING|CURRENT|ROW)\\b"
        },
        {
          "name": "keyword.other.sql.function.spq",
          "match": "(?i)\\b(EXTRACT|CAST|SUBSTRING|FOR)\\b"
        },
        {
          "name": "keyword.other.sql.temporal.spq",
          "match": "(?i)\\b(DATE|TIMESTAMP)\\b"
        }
      ]
    },
    "operators-builtin": {
      "comment": "Built-in pipeline operators (lowercase only, uppercase matches SQL)",
      "name": "support.function.operator.spq",
      "match": "\\b(aggregate|assert|call|cut|debug|drop|explode|fork|from|fuse|head|join|load|merge|output|over|pass|put|rename|sample|search|shapes|skip|sort|summarize|switch|tail|top|uniq|unnest|where|yield)\\b"
    },
    "functions-aggregate": {
      "comment": "Aggregate functions (lowercase only, uppercase matches SQL)",
      "name": "support.function.aggregate.spq",
      "match": "\\b(and|any|avg|collect|collect_map|count|dcount|first|last|max|min|or|sum|union)\\b"
    },
    "types": {
      "comment": "Type names from PEG",
      "name": "support.type.spq",
      "match": "\\b(uint8|uint16|uint32|uint64|int8|int16|int32|int64|float16|float32|float64|bool|bytes|string|ip|net|type|null|duration|time)\\b"
    },
    "durations": {
      "comment": "Duration literals like 1h30m, 500ms",
      "name": "constant.numeric.duration.spq",
      "match": "-?\\b[0-9]+(\\.[0-9]+)?(ns|us|ms|s|m|h|d|w|y)([0-9]+(\\.[0-9]+)?(ns|us|ms|s|m|h|d|w|y))*\\b"
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.pipe.spq",
          "match": "\\|>"
        },
        {
          "name": "keyword.operator.assignment.spq",
          "match": ":="
        },
        {
          "name": "keyword.operator.type.spq",
          "match": "::"
        },
        {
          "name": "keyword.operator.arrow.spq",
          "match": "->"
        },
        {
          "name": "keyword.operator.spread.spq",
          "match": "\\.\\.\\."
        },
        {
          "name": "keyword.operator.regex-match.spq",
          "match": "!~|~"
        },
        {
          "name": "keyword.operator.comparison.spq",
          "match": "==|!=|<>|<=|>=|<|>|="
        },
        {
          "name": "keyword.operator.string-concat.spq",
          "match": "\\|\\|"
        },
        {
          "name": "keyword.operator.logical.spq",
          "match": "!"
        },
        {
          "name": "keyword.operator.arithmetic.spq",
          "match": "[+\\-*/%]"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.spq",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.float.spq",
          "match": "\\b[0-9]+\\.[0-9]*([eE][+-]?[0-9]+)?\\b|\\b[0-9]+[eE][+-]?[0-9]+\\b|(?<![\\w])\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.integer.spq",
          "match": "\\b[0-9]+\\b"
        }
      ]
    }
  }
}
